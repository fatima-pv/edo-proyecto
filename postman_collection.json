        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('order_id', response.order_id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"items\": [\n    {\n      \"name\": \"Maki Acevichado\",\n      \"quantity\": 2,\n      \"price\": 18.00\n    },\n    {\n      \"name\": \"Ramen Tradicional\",\n      \"quantity\": 1,\n      \"price\": 22.00\n    },\n    {\n      \"name\": \"Gyoza\",\n      \"quantity\": 1,\n      \"price\": 12.00\n    }\n  ],\n  \"total\": 70.00,\n  \"customer_info\": {\n    \"name\": \"Juan Pérez\",\n    \"phone\": \"+51999888777\",\n    \"address\": \"Av. Larco 123, Miraflores\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ]
                        }
                    }
                },
                {
                    "name": "Advance Order - Cocina",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"order_id\": \"{{order_id}}\",\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"task_token\": \"REEMPLAZAR_CON_TASK_TOKEN_REAL\",\n  \"step\": \"COOKING\",\n  \"notes\": \"Preparación iniciada por el chef\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/advance",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "advance"
                            ]
                        }
                    }
                },
                {
                    "name": "Advance Order - Empaquetado",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"order_id\": \"{{order_id}}\",\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"task_token\": \"REEMPLAZAR_CON_TASK_TOKEN_REAL\",\n  \"step\": \"PACKAGED\",\n  \"notes\": \"Pedido empaquetado y listo\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/advance",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "advance"
                            ]
                        }
                    }
                },
                {
                    "name": "Advance Order - Delivery",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
