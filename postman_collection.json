                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"order_id\": \"{{order_id}}\",\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"task_token\": \"REEMPLAZAR_CON_TASK_TOKEN_REAL\",\n  \"step\": \"DELIVERED\",\n  \"notes\": \"Pedido entregado al cliente\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/advance",
                            "host": [
                                "{{baseUrl}}"
                            ],
